//----------------------------------------------------------------------------
function normal() { return(chr(27).'[0m'); }
function red() { return(chr(27).'[31m'); }
function green() { return(chr(27).'[32m'); }
function yellow() { return(chr(27).'[33m'); }
function blue() { return(chr(27).'[34m'); }
function violet() { return(chr(27).'[35m'); }
function sky() { return(chr(27).'[36m'); }
